{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Robot Code",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "robotpy",
            "args": [
                "sim"
            ],
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "justMyCode": true,
            "preLaunchTask": "uv_sync"
        }
    ]
}